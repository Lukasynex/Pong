<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.luk.pong"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.luk.pong.menu.MainActivity"
            android:label="@string/client" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.luk.pong.game.GameActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.luk.pong.server.Server"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.luk.pong.client.Client"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.luk.pong.menu.InfoActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.luk.pong.menu.OptionsActivity"
            android:label="@string/app_name" >
        </activity>
        
        
    </application>

</manifest>